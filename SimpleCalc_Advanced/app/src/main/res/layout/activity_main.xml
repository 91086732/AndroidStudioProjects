<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.palmdigital.simplecalc_advanced.MainActivity">

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAlignment="center"
        android:textSize="45dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_one"
            android:layout_width="404dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/one" />

        <ImageView
            android:id="@+id/iv_two"
            android:layout_width="398dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/two" />

        <ImageView
            android:id="@+id/iv_three"
            android:layout_width="397dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/three" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_four"
            android:layout_width="138dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/four" />

        <ImageView
            android:id="@+id/iv_five"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/five" />

        <ImageView
            android:id="@+id/iv_six"
            android:layout_width="139dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/six" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_seven"
            android:layout_width="117dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/seven" />

        <ImageView
            android:id="@+id/iv_eight"
            android:layout_width="115dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/eight" />

        <ImageView
            android:id="@+id/iv_nine"
            android:layout_width="115dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/nine" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_zero"
            android:layout_width="53dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/zero" />

        <ImageView
            android:id="@+id/iv_plus"
            android:layout_width="wrap_content"
            android:layout_height="89dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/plus" />

        <ImageView
            android:id="@+id/iv_minus"
            android:layout_width="wrap_content"
            android:layout_height="89dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/subtract" />

        <ImageView
            android:id="@+id/iv_multi"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/multiply" />

        <ImageView
            android:id="@+id/iv_divi"
            android:layout_width="wrap_content"
            android:layout_height="89dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/divide" />

        <ImageView
            android:id="@+id/iv_expo"
            android:layout_width="wrap_content"
            android:layout_height="89dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/exponontiation" />

        <ImageView
            android:id="@+id/iv_square"
            android:layout_width="wrap_content"
            android:layout_height="89dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/square" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <ImageView
        android:id="@+id/iv_equals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/equals" />

</LinearLayout>
